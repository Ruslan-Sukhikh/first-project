pipeline {
    agent any
    environment {
        // Using returnStdout
        WP_VER = """${sh(
                returnStdout: true,
                script: 'cat /var/lib/jenkins/jobs/Update_WP/wp_version.txt'
            )}"""
        // Using returnStatus
        EXIT_STATUS = """${sh(
                returnStatus: true,
                script: 'exit 1'
            )}"""
    }
    stages {
        stage('Example') {
            environment {
                DEBUG_FLAGS = '-g'
            }
            steps {
                sh '$WP_VER'
            }
        }
    }
}