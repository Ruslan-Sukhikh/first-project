pipeline {
    agent any
    environment {
        // Using returnStdout
        WP_VER = """${sh(
                returnStdout: true,
                script: 'ssh root@192.168.0.108 "grep 'wp_version =' /var/www/html/wp-includes/version.php'
            )}"""
        // Using returnStatus
        EXIT_STATUS = """${sh(
                returnStatus: true,
                script: 'exit 1'
            )}"""
    }
    stages {
        stage('Example') {
            environment {
                DEBUG_FLAGS = '-g'
            }
            steps {
                sh 'printenv'
            }
        }
    }
}